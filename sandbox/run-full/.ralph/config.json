{
    "version": "2.0.0",
    "project": {
        "name": "calculator"
    },
    "specs": {
        "pattern": "specs/epic-{{epic}}/story-{{id}}-*.md",
        "id_format": "epic.story",
        "frontmatter_status_field": "status"
    },
    "loop": {
        "max_iterations": 0,
        "timeout_seconds": 600,
        "max_retries": 2
    },
    "validation": {
        "commands": [
            {
                "name": "calc-tests",
                "cmd": "bash -c '[ -f tests/test-calc.sh ] && bash tests/test-calc.sh || true'",
                "required": false
            }
        ],
        "blocked_commands": []
    },
    "claude": {
        "flags": ["--print", "--dangerously-skip-permissions"]
    },
    "commit": {
        "format": "feat(story-{{id}}): {{title}}",
        "auto_commit": true
    },
    "testing_phase": {
        "enabled": true,
        "timeout_seconds": 120
    },
    "learnings": {
        "enabled": true,
        "max_inject_count": 3
    },
    "parallel": {
        "enabled": true,
        "max_concurrent": 2,
        "strategy": "worktree",
        "auto_merge": true,
        "merge_review_timeout": 900,
        "stagger_seconds": 3
    },
    "caffeine": false,
    "hooks": {
        "pre_iteration": "",
        "post_iteration": "",
        "pre_story": "echo \"Starting $RALPH_STORY\" >> hooks.log",
        "post_story": "echo \"Finished $RALPH_STORY: $RALPH_RESULT\" >> hooks.log"
    }
}
